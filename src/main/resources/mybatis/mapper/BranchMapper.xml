<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.myfithub.mapper.BranchMapper" >
    <resultMap id="BaseResultMap" type="com.myfithub.entities.BranchEntity" >
        <id     column="id"                property="id"                jdbcType="INTEGER" />
        <result column="adress"            property="adress"            jdbcType="VARCHAR" />
        <result column="beginning_of_work" property="beginning_of_work" jdbcType="TIME" />
        <result column="end_of_work"       property="end_of_work"       jdbcType="TIME" />
        <result column="fitness_clubs_id"  property="fitness_clubs_id"  jdbcType="INTEGER" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, adress, beginning_of_work, end_of_work,fitness_clubs_id
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM branches
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM branches
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.myfithub.entities.BranchEntity"  useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO
        branches
            ( adress, beginning_of_work, end_of_work,fitness_clubs_id)
        VALUES
            ( #{adress}, #{beginning_of_work}, #{end_of_work}, #{fitness_clubs_id})
    </insert>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM branches
        WHERE id =#{id}
    </delete>

    <update id="update" parameterType="com.myfithub.entities.BranchEntity" >
        UPDATE branches SET
        adress = #{adress},
        beginning_of_work = #{beginning_of_work},
        end_of_work = #{end_of_work},
        fitness_clubs_id = #{fitness_clubs_id}
        WHERE id = #{id}
    </update>

</mapper>